@model IEnumerable<EgyGobs.Models.Job>

@{
    ViewBag.Title = "ListJobs";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>الوظائف المنشورة</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.category.CategoryName)
        </th>
        <th>
            @Html.DisplayName("اسم الناشر")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobTitle)
        </th>
        <th >
            @Html.DisplayNameFor(model => model.JobContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobImage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobTitle)
        </td>
        <td>
            @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(modelitem => item.JobContent).ToString()))
        </td>
        <td>
            <img src="@Url.Action("UserPhotos", "Home" , new { id = item.Id} )" class="img-circle" alt="user Image" style="width:70px ; height :70px" />
        </td>
        <td>
         
            @Html.ActionLink("حذف", "DeleteJob", new { id=item.Id } , new {@class ="btn btn-danger"  })
        </td>
    </tr>
}

</table>
