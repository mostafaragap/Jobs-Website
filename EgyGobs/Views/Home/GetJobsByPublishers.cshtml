@model IEnumerable<EgyGobs.Models.JobsViewModel>


    <div>
        @{
            if (ViewBag.Res != null)
            {
                <h3 style="color:red">@ViewBag.Res</h3>
            }
           
        }
    </div>

@foreach (var gr in Model)
{
    <h3>
        @gr.JobTitle
    </h3>
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                اسم الباحث
            </th>
            <th>
                نص الرسالة
            </th>
            <th>
                تاريخ الارسال
            </th>
            <th>
                متقدم
            </th>
        </tr>
        @foreach (var item in gr.Items)
        {
    <tr>
        <td>
            @item.user.UserName
        </td>
        <td>
            @item.message
        </td>
        <td>
            @item.ApplayDate
        </td>

        <td>
            @Html.ActionLink("تفاصيل الطلب", "AgreeForJob", new { id = item.id }, new { @class = "btn btn-primary" })
          
            @Html.ActionLink("حذف الطلب", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })
        </td>


    </tr>

        }


    </table>

}